{
  "compilerOptions": {
    "allowJs": false,
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "target": "ES2022",
    "outDir": "./lib",
    "sourceMap": true,
    "module": "commonjs",
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "lib/**/*"
  ]
}